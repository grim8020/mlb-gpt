openapi: 3.0.1
info:
  title: MLB Schedule API
  description: Get MLB games by date.
  version: "1.0.0"
servers:
  - url: https://statsapi.mlb.com/api/v1
paths:
  /schedule/games:
    get:
      summary: Get MLB games for a date
      parameters:
        - in: query
          name: sportId
          schema:
            type: integer
          required: true
          example: 1
        - in: query
          name: date
          schema:
            type: string
            format: date
          required: true
          example: "2025-07-04"
      responses:
        '200':
          description: A list of games
